{
    "name": "easycoach/backend",
    "type": "project",
    "description": "EasyCoach Backend API",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 